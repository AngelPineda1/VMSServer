    <ScrollViewer Grid.Row="1">
        <ItemsControl Margin="20" ItemsSource="{Binding Mensajes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:MensajesView></local:MensajesView>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
