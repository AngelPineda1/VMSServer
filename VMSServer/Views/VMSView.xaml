                        <local:MensajesView></local:MensajesView>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>-->
        <!-- Botones -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Anterior" Margin="5" Command="{Binding AnteriorCommand}"/>
            <Button Content="Siguiente" Margin="5" Command="{Binding SiguienteCommand}"/>
        </StackPanel>
    </Grid>

